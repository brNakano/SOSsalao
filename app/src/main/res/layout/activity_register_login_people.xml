<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:theme="@style/SOSsalao.Login">

    <ImageView
        android:id="@+id/loginLogo"
        android:layout_width="98dp"
        android:layout_height="73dp"
        android:layout_marginTop="44dp"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/loginLogoName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/loginLogo"
        android:text="SOSsalÃ£o"
        android:fontFamily="@font/roboto_bold"
        android:textAlignment="center"
        android:textSize="35sp"
        android:layout_marginTop="10dp"
        tools:ignore="MissingConstraints"
        android:textColor="#272727"
        />

    <TextView
        android:id="@+id/info_change_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/roboto_regular"
        android:text="@string/info_register_user"
        android:textAlignment="center"
        android:layout_marginTop="25dp"
        android:textColor="#B9272727"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/nome"
        app:layout_constraintTop_toBottomOf="@+id/loginLogoName" />

    <EditText
        android:id="@+id/nome"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/login_yield"
        android:fontFamily="@font/roboto_regular"
        android:hint="Nome"
        android:padding="15dp"
        android:inputType="text"
        android:layout_marginTop="20dp"
        android:textColor="@color/input_text"
        android:textColorHint="#B9272727"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/info_change_password" />
    <EditText
        android:id="@+id/email"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/login_yield"
        android:fontFamily="@font/roboto_regular"
        android:hint="E-Mail"
        android:inputType="text"
        android:layout_marginTop="8dp"
        android:padding="15dp"
        android:textColor="@color/input_text"
        android:textColorHint="#B9272727"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nome" />

    <EditText
        android:id="@+id/telefone"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/login_yield"
        android:fontFamily="@font/roboto_regular"
        android:hint="Telefone"
        android:inputType="text"
        android:padding="15dp"
        android:textColor="@color/input_text"
        android:textColorHint="#B9272727"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/email" />
    <EditText
        android:id="@+id/user"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/login_yield"
        android:fontFamily="@font/roboto_regular"
        android:hint="Username"
        android:inputType="text"
        android:padding="15dp"
        android:textColor="@color/input_text"
        android:textColorHint="#B9272727"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/telefone" />
    <EditText
        android:id="@+id/password"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/login_yield"
        android:hint="Senha"
        android:inputType="textPassword"
        android:fontFamily="@font/roboto_regular"
        android:padding="15dp"
        android:textColor="@color/input_text"
        android:textColorHint="#B9272727"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/user"
        />

    <Button
        android:id="@+id/send_btn"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/roboto_bold"
        android:padding="12dp"
        android:text="Cadastrar"
        android:textAlignment="center"
        app:background="@drawable/login_btn"
        app:backgroundTint="@color/blue"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/password" />

</androidx.constraintlayout.widget.ConstraintLayout>